<script src="~/Asset/js/jquery2.0.3.min.js"></script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="log-w3">
        <div class="w3layouts-main">
            <h2>Sign In Now</h2>
            <form action="#" method="post">
                <input type="text" class="ggg" name="Hoten" placeholder="USER">
                <input type="password" class="ggg" name="MatKhau" placeholder="PASSWORD">
                <span><input type="checkbox" />Remember Me</span>
                <h6><a href="#">Forgot Password?</a></h6>
                <div class="clearfix"></div>
                <input type="submit" href="@Url.Action("Index", "Admin")" value="Sign In" name="login">
            </form>
            <p>Don't Have an Account ?<a href="@Url.Action("Register","Admin")">Create an account</a></p>
        </div>
    </div>
}
