@model LTWEB.Models.PRODUCT
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/MasterAd.cshtml";
}
<center><h2 style="border-bottom:1px solid black;width:350px;">Nhập thông tin sản phẩm</h2></center>
<div class="p-2 m-2">
    <table>
        @using (Html.BeginForm("Create", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @ViewBag.hide
            <span style="color:red;font-size:15px;"> @ViewData["Loi1"]</span>
            <span style="color:red;font-size:15px;"> @ViewData["Err1"]</span>
            <span style="color:green;font-size:15px;">@ViewData["Err2"]</span>
            <tr style="height:40px">
                <td>Tên sản phẩm:</td>
                <td>@Html.TextBox("name")</td>
            </tr>

            <tr style="height:40px">
                <td>Giá:</td>
                <td><input @*onChange="format_curency(this);"*@ name="price" type="number"></td>
            </tr>


            <tr style="height:40px;">
                <td>Nhập thông tin chi tiết :</td>
                <td><textarea id="summernote" name="description"></textarea></td>
            </tr>
            <tr style="height: 40px">
                <td>Tên đường:</td>
                <td>@Html.TextBox("TENDUONG")</td>
            </tr>

            <tr style="height:40px">
                <td>Tên quận:</td>
                <td>@Html.TextBox("TENQUAN")</td>
            </tr>

            <tr style="height:40px">
                <td>Diện tích:</td>
                <td>@Html.TextBox("DIENTICH")<label style="margin-left:20px;">Đơn vị tính : (m<sup>2</sup>)</label></td>
            </tr>

            <tr style="height:40px">
                <td>Tên dịch vụ:</td>
                <td>
                    <select id="MADV" name="MADV" style="height:30px">
                        <option value="10">Thuê phòng trọ</option>
                        <option value="20">Tìm người ở ghép</option>
                        <option value="30"> Tìm nhà cho thuê</option>
                    </select>
                </td>
                @*<td>@Html.TextBox("MADV")</td>*@
            </tr>





            <tr>
                @*<div class="form-group">
                <div class="col-md-10">*@
                <td>@Html.LabelFor(model => model.HINH, new { @class = "control-label col-md-2" })</td>
                <td><input type="file" name="fileupload" /></td>
                @*</div>
                </div>*@
            </tr>


            <tr style="height:40px">
                <td></td>
                <td>
                    <input type="submit" value="Đăng bài" />
                </td>
            </tr>
        }
    </table>
</div>
<script>
    $(document).ready(function () {
        $('#summernote').summernote({ width: 400, });
    });
</script>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("#ID").change(function () {
            if ($(this).val() != "0") {
                $("#ID").show();
            } else {
                $("#ID").hide();
            }
        });
    });
</script>