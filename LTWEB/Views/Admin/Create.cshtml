@model LTWEB.Models.PRODUCT
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/MasterAd.cshtml";
}
<center><h2 style="border-bottom:1px solid black;width:350px;">Nhập thông tin sản phẩm</h2></center>
<div class="p-2 m-2">
    <table>
        @using (Html.BeginForm("Create", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @ViewBag.hide
            <span style="color:red;font-size:15px;"> @ViewData["Loi1"]</span>
            <span style="color:red;font-size:15px;"> @ViewData["Err1"]</span>
            <span style="color:green;font-size:15px;">@ViewData["Err2"]</span>
            <tr style="height:40px">
                <td>Tên sản phẩm:</td>
                <td>@Html.TextBox("name")</td>
            </tr>

            <tr style="height:40px">
                <td>Giá:</td>
                <td><input name="price" type="number"></td>
            </tr>

            <tr style="height:40px">
                <td>Chọn Size:</td>
                <td>
                    <select id="idsize" name="idsize" style="height:30px">
                        <option value="1">Full Size</option>
                        <option value="2">Tenkeyless (TKL)</option>
                    </select>
                </td>
            </tr>

            <tr style="height:40px">
                <td>Chọn màu:</td>
                <td>
                    <select id="idcolor" name="idcolor" style="height:30px">
                        <option value="1">Black</option>
                        <option value="2">Red</option>
                        <option value="3">White</option>
                    </select>
                </td>
            </tr>

            <tr>
                <td>@Html.LabelFor(model => model.img, new { @class = "control-label col-md-2" })</td>
                <td><input type="file" name="fileupload" /></td>
            </tr>


            <tr style="height:40px;">
                <td>Nhập thông tin chi tiết :</td>
                <td><textarea id="summernote" name="description"></textarea></td>
            </tr>

            <tr style="height:40px">
                <td></td>
                <td>
                    <input type="submit" value="Đăng bài" />
                </td>
            </tr>
        }
    </table>
</div>
<script>
    $(document).ready(function () {
        $('#summernote').summernote();
    });
</script>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("#ID").change(function () {
            if ($(this).val() != "0") {
                $("#ID").show();
            } else {
                $("#ID").hide();
            }
        });
    });
</script>