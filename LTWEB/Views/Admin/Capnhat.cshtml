@model IEnumerable<LTWEB.Models.LoadDanhSach>
@{
    ViewBag.Title = "Cập Nhật Thông Tin";
    Layout = "~/Views/Shared/MasterAd.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-12">
                <h4 class="page-title">Cập nhật</h4>
                <ol class="breadcrumb">
                    Cập Nhật Thông Tin Bài Viết
                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="col-md-8 col-xs-12">
            <div class="white-box">
                @using (Html.BeginForm("Capnhat", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal form-material" }))
                {
                    <p>@ViewData["Err5"]</p>
                    <p>@ViewData["Err55"]</p>
                    if (Model != null)
                    {
                        foreach (var tt in Model)
                        {
                            <div class="form-group">
                                <label class="col-md-12">Tên sản phẩm</label>
                                <div class="col-md-12">
                                    @Html.TextBox("name", null, new { @class = "form-control ", type = "text", placeholder = "Nhập tên sản phẩm", Value = tt.name })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">meta</label>
                                <div class="col-md-12">
                                    @Html.TextBox("meta", null, new { @class = "form-control ", type = "text", Value = tt.meta })
                                </div>
                            </div>  

                            <div class="form-group">
                                <label class="col-md-12">Nội dung</label>
                                <tr style="height:40px">
                                    <td>Nhập thông tin chi tiết:</td>
                                    <td><textarea id="summernote" name="description"></textarea></td>
                                </tr>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">Giá</label>
                                <div class="col-md-12">
                                    @Html.TextBox("price", null, new { @class = "form-control ", type = "number", placeholder = "Giá", Value = tt.price })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <button class="btn btn-success">Cập Nhật</button>
                                    </div>
                                </div>
                            </div>
                        }

                    }
                }
            </div>
        </div>
    </div>
</div>